from datetime import datetime

#Kimi Räikkönen F1 Championship simulator.

yearNow = datetime.now().year

kimiChamp = int(2007)
birthYear = int(input("Your birth year: "))

calc = (kimiChamp - birthYear)
calcAbs = abs(calc)

if calc < 0:
    print("You weren't born yet. Kimi won his Formula 1 World Championship!", calcAbs, "years before you were born.")

else:
    print("You were", calc, "years old when Kimi won his Formula 1 World Championship!")
